{
  "compilerOptions": {

    "noImplicitAny": true,
    "noImplicitThis": true,

    "outDir": "dist",

    // 
    
    "target": "esnext",
    "module": "commonjs",
    // "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "discord/*"
      ],
      "@void/*": [
        "void/*"
      ],
      "@animations/*": [
        "discord/animations/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "discord/**/*.ts",
    "discord/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
